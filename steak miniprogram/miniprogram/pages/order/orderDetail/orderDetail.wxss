/* pages/order/orderDetail/orderDetail.wxss */
.list{
  width: 80%;
  height: 600rpx;
  margin:150rpx auto 50rpx;
  border: 1rpx rgb(187, 179, 179) solid;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.list scroll-view{
  width: 100%;
  height: 600rpx;
}
.aBox{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  margin-top: 5rpx;
  background-color: #faf5f5;
  color: rgb(102, 98, 98);
}
.bBox{
  width: 98%;
  height: 50rpx;
  margin: auto;
  display:flex;
  flex-flow: row;
  justify-content: space-between;
  font-size: 26rpx;
}
.stand{
  height: 50rpx;
  font-size: 22rpx;
}
.allPrice{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  border-top: 1rpx rgb(187, 179, 179) solid;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color: rgb(209, 23, 23);
}
.order{
  margin:10rpx auto;
  width: 250rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:30rpx;
  border:1rpx rgb(224, 88, 34) solid;
  color:rgb(224, 88, 34);
  border-radius: 20rpx;
}
.h_order{
  background-color: rgb(224, 88, 34);
  color: white;
}
